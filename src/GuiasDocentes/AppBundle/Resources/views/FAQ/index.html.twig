        <link href=" {{ asset('Resources/FAQ/css/index/index-ly.css') }}" rel="stylesheet" />
{% endblock %}
{% block breadcrumb %}
    Inicio >>
{% endblock %}
{% block content_title %}
	<h2 class="title" title="Aplicación de guías docentes UJA">APLICACIÓN DE GUÍAS DOCENTES UJA - Dudas e Incidencias</h2>
{% endblock %}
{% block content %}
        <div class="cuadro" id="manuales">
          <h3 class="cuadro_titulo"><img  src="{{asset('Resources/FAQ/img/book.png')}}" alt="Manuales">Manuales</h3>
          {#<hr class="line-section" />#}
			<div id="listas">
            <ul>
            	<li><img  src="{{asset('Resources/FAQ/img/pdf.gif')}}" alt="PDF" ><a href="{{ asset('Resources/FAQ/doc/guias/GuiaHerramientaGuiasDocentes-Profesor.pdf') }}" target="_blank">Para profesores responsables de asignatura </a></li>
                <li><img  src="{{asset('Resources/FAQ/img/pdf.gif')}}" alt="PDF" ><a href="{{ asset('Resources/FAQ/doc/guias/GuiaHerramientaGuiasDocentes-Dir_Departamento.pdf') }}" target="_blank">Para directores de departamento</a> </li>
                <li><img  src="{{asset('Resources/FAQ/img/pdf.gif')}}" alt="PDF" ><a href="{{ asset('Resources/FAQ/doc/guias/GuiaHerramientaGuiasDocentes-Direccion_Centro.pdf') }}" target="_blank">Para decanos/directores de Facultades/Escuelas</a></li>
