      {#<hr class="line-section" />#}
            <div class="perfiles-content">
                <p id="choose-profile">Elija su perfil:</p>
                <form id="perfiles-form" method="POST" action="{{ path('guias_docentes_app_gfaq') }}">
    
                    <select id="perfiles" name="perfil" class="down">
                        {% for perfil in perfiles %} 
    
                        <option id="{{perfil.getOrden()}}" value="{{perfil.getNombre()}}">{{perfil.getNombre()}}</option>
                        {% endfor %}
                    </select>
                     <input type="submit" value="Enviar" >
                </form>
            </div>
      </div>
{% endblock %}
