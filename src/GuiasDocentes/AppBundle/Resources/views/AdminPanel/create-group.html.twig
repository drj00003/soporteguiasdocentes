{% extends 'AdminPanel/base-side-left-header-admin-panel.html.twig' %}
    {% block breadcrumb %}
        <ol class="breadcrumb bg-none pull-left hide-xs">
            <li><a href="{{ path ('guias_docentes_app_admin_panel_index') }}">Home</a></li>
            <li class="active">Añadir Grupo</li>
        </ol>
    {% endblock %}
{% block content_body %}

<div class="magic-layout">
    <div class="box magic-element width-full">
        <h2 class="box-heading">
            Nuevo Grupo
        </h2>
        <form class="form-horizontal" role="form" method="POST" action="{{ path('guias_docentes_app_admin_panel_create_group')}}">
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input">Nombre del grupo</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required="required" id="input" name="nombre" placeholder="Nombre del grupo" >
                    </div>
                </div><!-- /form-group -->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input">Orden</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" required="required" name="orden" id="input" placeholder="Orden" >
                    </div>
                </div><!-- /form-group -->
                <div class="form-group">
                <label class="col-sm-2 control-label" for="select">Perfiles</label>
                    <div class="col-sm-10">
                        <select class="select2" name="perfil" style="width:100%">
                            {% for perfil in perfiles %}
                                <option value="{{perfil.getNombre}}">{{perfil.getNombre}}</option>
                            {%endfor%}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="reset" class="btn btn-default">Reiniciar</button>
                        <button type="submit" class="btn btn-primary">Añadir</button>
                    </div>
                </div><!-- /form-group -->
            </fieldset><!-- /fieldset -->
        </form><!-- /form -->
    </div><!-- /box -->
</div>

{% endblock %}
{% block javascripts %}
    {{ parent()}}
    <script src='{{ asset('Resources/AdminPanel/js/addGroup.js') }}'></script>
{% endblock %}